@model IEnumerable<ProjetFinal.Models.Critique>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomUtilisateur)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReplyCritique)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdBibliothequeNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomUtilisateur)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReplyCritique)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdBibliothequeNavigation.IdBibliotheque)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdCritique">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdCritique">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdCritique">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
